<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel HorizontalAlignment="Left">
        <TextBlock Margin="10,10,10,0">User Name</TextBlock>
        <TextBox x:Name="UserName" Margin="10,0,10,10" Width="200"></TextBox>
        <Button Margin="10" Click="ButtonBase_OnClick">Go</Button>
        <TextBlock x:Name="Message" Margin="10" Width="200"/>
    </StackPanel>
</Window>
